@page
@model EFCoreMovie3_RazorPages_Solution.Pages.Studios.CreateModel
@{
}


<h1>Create Studio</h1>

<form method="post">
    
    <div class="form-group">
        <label asp-for="@Model.Studio.Id" class="control-label"> Id: </label>
        <input asp-for="@Model.Studio.Id" class="form-control" />
        <span asp-validation-for="@Model.Studio.Id"  class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Studio.Name" class="control-label"> Name: </label>
        <input asp-for="@Model.Studio.Name" class="form-control" />
        <span asp-validation-for="@Model.Studio.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Studio.Hqcity" class="control-label"> Head quarters: </label>
        <input asp-for="@Model.Studio.Hqcity" class="form-control" />
        <span asp-validation-for="@Model.Studio.Hqcity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Studio.NoOfEmployees" class="control-label"> Employees: </label>
        <input asp-for="@Model.Studio.NoOfEmployees" class="form-control" />
        <span asp-validation-for="@Model.Studio.NoOfEmployees" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
