@page
@model EFCoreMovie3_RazorPages_Solution.Pages.Movies.CreateModel
@{
}

<h1>Create Movie</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Movie.Id" class="control-label"> Id: </label>
        <input asp-for="@Model.Movie.Id" class="form-control" />
        <span asp-validation-for="@Model.Movie.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Movie.Title" class="control-label"> Title: </label>
        <input asp-for="@Model.Movie.Title" class="form-control" />
        <span asp-validation-for="@Model.Movie.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Movie.RunningTimeInMins" class="control-label"> Running time (min): </label>
        <input asp-for="@Model.Movie.RunningTimeInMins" class="form-control" />
        <span asp-validation-for="@Model.Movie.RunningTimeInMins" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Movie.Year" class="control-label"> Year: </label>
        <input asp-for="@Model.Movie.Year" class="form-control" />
        <span asp-validation-for="@Model.Movie.Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label hidden="hidden" asp-for="@Model.Movie.StudioId" class="control-label"> Studio ID: </label>
        <input hidden="hidden" asp-for="@Model.Movie.StudioId" class="form-control" />
        <span asp-validation-for="@Model.Movie.StudioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
